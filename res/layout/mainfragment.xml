<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".MainFragment" >

    <TextView
        android:id="@+id/AGPStitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:ems="10"
        android:inputType="none"
        android:lines="2"
        android:textStyle="normal"
        android:typeface="normal" >
    </TextView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_border"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="1" >

            <TextView
                android:id="@+id/txNMEAinp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_row="0"
                android:text="@string/txNMEAinp"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnSvNMEA"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_gravity="right"
                android:layout_row="0"
                android:minHeight="12dp"
                android:minWidth="40dp"
                android:text="@string/btn_save"
                android:textSize="14sp" />
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:rowCount="2" >

            <TextView
                android:id="@+id/txtGGA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:text="GGA"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/GGA"
                style="@layout/spinnerlayout"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_row="1"
                android:entries="@array/listNMEAfixShow"
                android:maxLength="1" />

            <TextView
                android:id="@+id/txtGLL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:text="GLL"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/GLL"
                style="@layout/spinnerlayout"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_gravity="left"
                android:layout_row="1"
                android:entries="@array/listNMEAfixShow"
                android:gravity="center_horizontal"
                android:maxLength="1" />

            <TextView
                android:id="@+id/txtGSA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:text="GSA"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/GSA"
                style="@layout/spinnerlayout"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_gravity="left"
                android:layout_row="1"
                android:entries="@array/listNMEAfixShow"
                android:maxLength="1" />

            <TextView
                android:id="@+id/txtGSV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:text="GSV"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/GSV"
                style="@layout/spinnerlayout"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_gravity="left"
                android:layout_row="1"
                android:entries="@array/listNMEAfixShow"
                android:maxLength="1" />

            <TextView
                android:id="@+id/txtRMC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:text="RMC"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/RMC"
                style="@layout/spinnerlayout"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_gravity="left"
                android:layout_row="1"
                android:entries="@array/listNMEAfixShow"
                android:maxLength="1" />

            <TextView
                android:id="@+id/txtVTG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:text="VTG"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/VTG"
                style="@layout/spinnerlayout"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_gravity="left"
                android:layout_row="1"
                android:entries="@array/listNMEAfixShow"
                android:maxLength="1" />

            <TextView
                android:id="@+id/txtZDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_gravity="left"
                android:layout_marginTop="5dp"
                android:layout_row="0"
                android:gravity="center_horizontal"
                android:text="ZDA"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <Spinner
                android:id="@+id/ZDA"
                style="@layout/spinnerlayout"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_gravity="left"
                android:layout_row="1"
                android:entries="@array/listNMEAfixShow"
                android:maxLength="1" />
        </GridLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_connect"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="12dp"
            android:text="@string/btn_connect" />

        <Button
            android:id="@+id/btn_pause"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_connect"
            android:layout_toRightOf="@+id/btn_connect"
            android:minHeight="12dp"
            android:text="@string/btn_pause" />

        <Button
            android:id="@+id/btnNMEAdflt"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_pause"
            android:layout_toRightOf="@+id/btn_pause"
            android:minHeight="12dp"
            android:text="@string/btnNMEAdflt" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/txtRS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/txtRS" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >
        
        <Button
            android:id="@+id/btnHot"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="12dp"
            android:text="@string/btnHot" />

        <Button
            android:id="@+id/btnWarm"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnHot"
            android:layout_toRightOf="@+id/btnHot"
            android:minHeight="12dp"
            android:text="@string/btnWarm" />

        <Button
            android:id="@+id/btnCold"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnWarm"
            android:layout_toRightOf="@+id/btnWarm"
            android:minHeight="12dp"
            android:text="@string/btnCold" />

        <Button
            android:id="@+id/btnReset"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnCold"
            android:layout_toRightOf="@+id/btnCold"
            android:minHeight="12dp"
            android:text="@string/btnReset" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/msv_Text"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_border" >

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/mtv_Serial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>